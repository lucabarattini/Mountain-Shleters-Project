// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: FastAPI (backend)",
        "type": "python",
        "request": "launch",
        "module": "uvicorn",
        "args": [
          "app.main:app",
          "--host", "0.0.0.0",
          "--port", "80",
          "--reload"
        ],
        "cwd": "${workspaceFolder}",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        },
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  